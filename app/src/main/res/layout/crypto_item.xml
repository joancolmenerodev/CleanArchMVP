<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
             android:background="#f0f0f0"
             android:layout_height="wrap_content">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/carCard"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="false" android:layout_centerInParent="true">

        <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/item_crypto_name"
                    android:textSize="18sp"
                    tools:text="Bitcoin"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_crypto_symbol"
                    android:textSize="16sp"
                    tools:text="BTC"
            />


            <Button
                    android:id="@+id/btn_more_info"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:text="@string/more_info_text"
                    android:drawableStart="@android:drawable/ic_dialog_info"
                    android:drawableLeft="@android:drawable/ic_dialog_info"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
</FrameLayout>